<UserControl x:Class="AudibleZenBot.WPF.Views.AutomationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <StackPanel Orientation="Vertical">
            <TextBlock FontSize="24" FontWeight="Bold" Foreground="#ffffff">Automation</TextBlock>
            <TextBlock Text="Automate chat commands, events, timers, and manage variables." Foreground="#cccccc" Margin="0,4,0,8" />
            <TabControl x:Name="AutomationTabs">
                <TabItem Header="ðŸ”£ Variables">
                    <Grid Margin="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
                            <Button x:Name="BtnAddVariable" Content="Add Variable" Width="120" />
                            <Button x:Name="BtnDeleteVariable" Content="Delete Selected" Width="120" Margin="8,0,0,0" />
                        </StackPanel>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="VariablesContainer" />
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="ðŸ§© Functions">
                    <Grid Margin="8">
