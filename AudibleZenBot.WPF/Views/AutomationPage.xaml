                    </Grid>
                </TabItem>
                <TabItem Header="ðŸŽ¯ Triggers">
                    <Grid Margin="8">
                        <ListBox x:Name="LbTriggers" />
                    </Grid>
                </TabItem>
                <TabItem Header="â° Timers">
                    <Grid Margin="8">
                        <ListBox x:Name="LbTimers" />
                    </Grid>
                </TabItem>
                <TabItem Header="âš¡ Events">
                    <Grid Margin="8">
                        <ListBox x:Name="LbEvents" />
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>