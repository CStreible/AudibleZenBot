<UserControl x:Class="AudibleZenBot.WPF.Views.OverlayPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock FontSize="24" FontWeight="Bold" Foreground="#ffffff">Chat Overlay Configuration</TextBlock>
            <TextBlock Text="Configure the chat overlay for OBS Browser Source or a web browser." Foreground="#cccccc" Margin="0,4,0,8" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="0,6,0,0">
                <GroupBox Header="Overlay URL" Margin="0,6,0,6">
                    <StackPanel Orientation="Vertical" Margin="6">
                        <TextBlock x:Name="TbOverlayUrl" Text="Starting overlay server..." Foreground="#4a90e2" />
                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                            <Button x:Name="BtnCopyUrl" Content="Copy URL" Width="100" />
                            <Button x:Name="BtnOpenUrl" Content="Open in Browser" Width="120" Margin="8,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Appearance Settings" Margin="0,6,0,0">
                    <Grid Margin="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="Username Font:" Foreground="#cccccc" />
                            <ComboBox x:Name="CbUsernameFont" Width="200" />
                            <TextBlock Text="Message Font:" Foreground="#cccccc" Margin="0,8,0,0" />
                            <ComboBox x:Name="CbMessageFont" Width="200" />
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <TextBlock Text="Max Messages:" Foreground="#cccccc" />
                            <TextBox x:Name="TbMaxMessages" Width="80" />
                            <TextBlock Text="Opacity:" Foreground="#cccccc" Margin="0,8,0,0" />
                            <Slider x:Name="SldOpacity" Minimum="0" Maximum="100" Value="70" Width="160" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <Border Background="#111" Height="180" Margin="0,8,0,0" CornerRadius="4" Padding="8">
                    <TextBlock Text="Overlay Preview (stub)" Foreground="#aaaaaa" />
                </Border>
            </StackPanel>
        </ScrollViewer>
        </Grid>
    </UserControl>