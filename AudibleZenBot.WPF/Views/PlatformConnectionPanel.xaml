<UserControl x:Class="AudibleZenBot.WPF.Views.PlatformConnectionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="360" d:DesignWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" Background="#151515" BorderBrush="#2d2d2d" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Streamer" Foreground="#4A90E2" FontWeight="Bold" />
                    <TextBlock x:Name="TbStreamerName" Text="Not connected" Foreground="#cccccc" Margin="0,6,0,6" />
                    <Button x:Name="BtnStreamerLogin" Content="Login" Width="120" />
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="#151515" BorderBrush="#2d2d2d" BorderThickness="1" CornerRadius="4" Padding="8" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="Bot" Foreground="#7ED321" FontWeight="Bold" />
                    <TextBlock x:Name="TbBotName" Text="Not connected" Foreground="#cccccc" Margin="0,6,0,6" />
                    <Button x:Name="BtnBotLogin" Content="Login" Width="120" />
                </StackPanel>
            </Border>
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="0,0,0,0">
                <CheckBox x:Name="ChkDisable" Content="Disable platform" Foreground="White" />
                <TextBlock Text="Status / Info" Foreground="#cccccc" FontWeight="Bold" Margin="0,8,0,4" />
                <TextBox x:Name="TxtInfo" Height="120" Text="Logs and connection info" IsReadOnly="True" Background="#111" Foreground="#ddd" />
            </StackPanel>
        </Grid>

        <GroupBox Grid.Row="1" Header="Stream Settings" Margin="0,8,0,8">
            <Grid Margin="6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,6">
                    <TextBlock Text="Stream Title:" Foreground="#cccccc" Width="120" />
                    <TextBox x:Name="TxtTitle" Width="400" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,6">
                    <TextBlock Text="Category:" Foreground="#cccccc" Width="120" />
                    <Grid>
                        <TextBox x:Name="TxtCategory" Width="400" />
                        <Popup x:Name="PopupCategory" PlacementTarget="{Binding ElementName=TxtCategory}" Placement="Bottom" StaysOpen="False">
                            <Border Background="#222" BorderBrush="#444" BorderThickness="1" CornerRadius="4">
                                <ListBox x:Name="CategorySuggestions" Width="400" Background="Transparent" Foreground="White" />
                            </Border>
                        </Popup>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2">
                    <TextBlock Text="Notification:" Foreground="#cccccc" Width="120" />
                    <TextBox x:Name="TxtNotification" Width="400" Height="60" TextWrapping="Wrap" AcceptsReturn="True" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="2">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                <Button x:Name="BtnAddTag" Content="+ Add Tag" Width="100" />
                <Button x:Name="BtnRefresh" Content="ðŸ”„ Refresh" Width="100" Margin="8,0,0,0" />
                <Button x:Name="BtnSave" Content="ðŸ’¾ Save" Width="100" Margin="8,0,0,0" />
            </StackPanel>
            <WrapPanel x:Name="TagsPanel" />
        </StackPanel>
    </Grid>
</UserControl>
